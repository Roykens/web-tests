<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage Title="Main"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Xamarin.AsyncTests.UI;assembly=Xamarin.AsyncTests.UI"
    x:Class="Xamarin.AsyncTests.UI.MainPage">

    <StackLayout Orientation="Vertical">
        <Frame>
            <local:ServerControlView />
        </Frame>

        <Frame>
            <StackLayout Orientation="Vertical">
                <local:TestRunnerControl BindingContext="{Binding App.TestRunner}" />
            </StackLayout>
        </Frame>

        <local:SessionListView BindingContext="{Binding App.SessionManager}" />

    </StackLayout>

</ContentPage>

